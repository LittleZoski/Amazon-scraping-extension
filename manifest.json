{
  "manifest_version": 3,
  "name": "Amazon Product Scraper",
  "version": "1.0.0",
  "description": "Extract Amazon product information for re-listing on eBay",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.ca/*",
    "https://www.ebay.com/*",
    "https://www.ebay.co.uk/*",
    "https://www.ebay.ca/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.ca/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.ebay.com/*",
        "https://www.ebay.co.uk/*",
        "https://www.ebay.ca/*"
      ],
      "js": ["ebay-content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/scrapers/*.js",
        "src/extractors/*.js",
        "src/utils/*.js",
        "src/storage/*.js",
        "src/ui/*.js"
      ],
      "matches": [
        "https://www.ebay.com/*",
        "https://www.ebay.co.uk/*",
        "https://www.ebay.ca/*"
      ]
    }
  ]
}
